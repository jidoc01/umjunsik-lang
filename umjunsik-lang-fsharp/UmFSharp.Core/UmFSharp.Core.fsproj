    <Compile Include="AST.fs" />
    <Compile Include="Context.fs" />
    <Compile Include="Interpreter.fs" />
    <Compile Include="Optimizer.fs" />
    <FsYacc Include="UmParser.fsp">
      <OtherFlags>--module UmFSharp.Core.UmParser -o UmParser.fs</OtherFlags>
